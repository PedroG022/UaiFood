{% extends 'base.html.twig' %}

{% block title %}Login{% endblock %}

{% block body %}
<div class="container d-flex justify-content-center align-items-center min-vh-100">
    <div class="card shadow-lg" style="width: 100%; max-width: 400px; padding: 2rem; border-radius: 1rem;">
        <div class="card-body">
            <h1 class="h3 mb-3 text-center">Faça login</h1>
            
            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
            {% endif %}

            {% if app.user %}
                <div class="mb-3 text-center">
                    Você está logado como {{ app.user.userIdentifier }}, 
                    <a href="{{ path('app_logout') }}" class="text-decoration-none">Sair</a>
                </div>
            {% endif %}

            <form method="post">
                <div class="mb-3">
                    <label for="username" class="form-label">Email</label>
                    <input type="email" value="{{ last_username }}" name="_username" id="username" class="form-control" autocomplete="email" required autofocus style="border-radius: 0.25rem; border: 1px solid #ced4da; padding: 0.75rem;">
                </div>

                <div class="mb-3">
                    <label for="password" class="form-label">Senha</label>
                    <input type="password" name="_password" id="password" class="form-control" autocomplete="current-password" required style="border-radius: 0.25rem; border: 1px solid #ced4da; padding: 0.75rem;">
                </div>

                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

                <button class="btn btn-lg btn-primary w-100" type="submit" style="border-radius: 0.25rem;">Entrar</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
