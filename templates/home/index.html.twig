{% extends 'base.html.twig' %}

{% block title %}Home{% endblock %}

{% block body %}

    <h1 class="mt-3">Perto de vocÃª</h1>


    <div class="container mt-4">
        <div class="row g-4">
            {% for store in stores %}
                <div class="col-md-4">
                    <div class="card" style="width: 100%;">
                        <a href="{{ path('app_store_show', {id: store.id}) }}" class="stretched-link"
                           style="text-decoration: none;color: inherit;">
                            <img src="{{ store.logoUrl }}" class="card-img-top" alt="Logo da Loja"
                                 style="object-fit: cover; height: 200px;">
                            <div class="card-body">
                                <h5 class="card-title">{{ store.name }}</h5>
                                <p class="card-text">{{ store.description }}</p>
                            </div>
                        </a>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>


{% endblock %}
