<form method="post" action="{{ path('app_store_delete', {'id': store.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');" class="d-inline">
    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ store.id) }}">
    <button type="submit" class="btn btn-danger btn-lg w-100 mt-2">
        <i class="bi bi-trash"></i> Delete
    </button>
</form>
